@model Collaborate_lrn_Py.Models.CollaborateViewModel

@{
    ViewBag.Title = "Add a collaborator";
}

@using (Html.BeginForm("AddCollaborator", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>@ViewBag.Title</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.TutorialSelection, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("TutorialSelection")
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.InputCollaborator, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.InputCollaborator, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="#" class="btn btn-default" value="Add" />
        </div>
    </div>
}