@model Collaborate_lrn_Py.Models.ApplicationUser

@{
    ViewBag.Title = "Student Profile";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/obsidian.css">
<script src="~/Scripts/highlight.pack.js"></script>
<script>hljs.initHighlightingOnLoad();</script>
<style>
    .padbtn{
        padding-left:1em;
    }
</style>

    <div class="row">
    <div class="col-md-8" style="background-color:#4e5d6c">
        <h2 class="text-center">Paths. <small>Customize learning</small></h2>
        @foreach (var i in Model.Paths)
            {
            <table class="table">
                <tr>
                    <td><hr />
                        <div align="center">
                            <h3>@Html.DisplayFor(m => i.PathName)</h3>
                            <div>
                                <div>
                                        <span class="padbtn">@Html.DisplayNameFor(m => i.Published): @Html.DisplayFor(m => i.Published)</span>
                                        <span class="padbtn">@Html.DisplayNameFor(m => i.Votes): @Html.DisplayFor(m => i.Votes)</span>
                                        <span class="padbtn">
                                            <a href="@Url.Action("Publish", "Paths", new { id = i.Id })" class="btn btn-success">
                                                Publish
                                                <span class="glyphicon glyphicon-globe" aria-hidden="true"></span>
                                            </a>
                                        </span>
                                        <span class="padbtn">
                                            <a href="@Url.Action("Details", "Paths", new { id = i.Id })" class="btn btn-info">
                                                View
                                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                            </a>
                                        </span>
                                        <span class="padbtn">
                                            <a href="@Url.Action("Edit", "Paths", new { id = i.Id })" class="btn btn-warning">
                                                Edit
                                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                            </a>
                                        </span>
                                        <span class="padbtn">     
                                          
                                            <a href="@Url.Action("Delete", "Paths", new { id = i.Id })" class="btn btn-danger">
                                                Remove
                                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                            </a>
                                        </span>
                                </div>
                            </div>
                            <br />
                            <h5>Tutorials:</h5>
                        </div>
                </tr>
            </table>

            foreach (var item in i.Tutorials)
            {
                <div class="col-md-4">
                    <div class="">
                        <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
                        <p>@Html.DisplayFor(m => item.Description)</p>
                        <p><span style="font-weight:bold">@Html.DisplayNameFor(model => item.Votes):</span> @Html.DisplayFor(modelItem => item.Votes)</p>
                    </div>
                    <br /><br />
                </div>
            }
        }
    </div>


    <div class="col-md-3">
        <div align="right">
            <h2>@Model.UserName </h2>
            <p>@Html.DisplayNameFor(model => model.Points): <strong>@Html.DisplayFor(model => model.Points)</strong></p>
            <p>@Html.DisplayNameFor(model => model.CompletedTutorialsCount): <strong>@Html.DisplayFor(model => model.CompletedTutorialsCount) </strong></p>
        </div>
    </div>
    <div class="col-md-3" style="padding:30px" align="right" >
        <div >
            <a href="@Url.Action("Create", "Paths")" class="btn btn-primary">
                Create a Path
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>
        </div>
    </div>

        <div class="col-md-3" style="padding:30px;color:deepskyblue" align="right">
            <div>
                <p>This is your Dashboard. Here you'll find links to create custom paths that you can publish 
                publicly when they're ready.</p>
            </div>
        </div>
        <div class="col-md-3">
                <div align="left">
                    <pre style="background-color: #282b2e"><code class="python">def Greet(name):
    print("Welcome to Tutorial Hub, {}.".format(name))
                   
Greet("@Model.UserName")
                
#Welcome to Tutorial Hub, @Model.UserName. 
            </code></pre>
                </div>
            </div>

</div>

