
@{
    ViewBag.Title = "Profile";
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .sidebartext{
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tutorial Hub", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Tutorials", "Index", "Tutorials")</li>
                    <li>@Html.ActionLink("Paths", "Index", "Paths")</li>
                    <li>@Html.ActionLink("Community", "Index", "Community")</li>
                    <li>@Html.ActionLink("Code Challenges", "Index", "Quiz")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="wrapper container-fluid">
        <div class="container col-md-1" style="min-height:1000px;background-color:#df691a;color: #fff">
            <div id="sidebar-wrapper" style="color: #fff">
                <ul class="nav sidebar-nav" style="color: #fff">
                    <li class="sidebar-brand">
                        <span class="sidebartext">@Html.ActionLink("Tutorial Hub", "Index", "Home")</span>
                    </li>
                    <li>
                        <span class="sidebartext">@Html.ActionLink("Dashboard", "Index", "Profile")</span>
                    </li>
                    <li>
                        <span class="sidebartext">@Html.ActionLink("Tutorials", "Index", "Tutorials")</span>
                    </li>
                    <li>
                        <span class="sidebartext">@Html.ActionLink("Paths", "Index", "Paths")</span>
                    </li>
                    <li>
                        <span class="sidebartext">@Html.ActionLink("Community", "Index", "Community")</span>
                    </li>
                    <li>
                        <span class="sidebartext">@Html.ActionLink("Challenges", "Index", "Quiz")</span>
                    </li>
                </ul>
            </div>
        </div>

    <div class="" style="margin:0px 10px 0px 150px">
        @RenderBody()
        <br />
        <footer></footer>
    </div>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="http://www.skulpt.org/static/skulpt.min.js" type="text/javascript"></script>
    <script src="http://www.skulpt.org/static/skulpt-stdlib.js" type="text/javascript"></script> 
</body>
</html>
