
@{
    ViewBag.Title = "Profile";
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .sidebartext{
            color: #fff;
            text-decoration: none;
            text-decoration-color: #fff;
        }
        .sbi{
            padding: 15px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tutorial Hub", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Tutorials", "Index", "Tutorials")</li>
                    <li>@Html.ActionLink("Paths", "Index", "Paths")</li>
                    <li>@Html.ActionLink("Community", "Index", "Community")</li>
                    <li>@Html.ActionLink("Code Challenges", "Index", "Quiz")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="wrapper container-fluid" style="padding-left:1em">
        <div class="container col-md-1" style="height:800px;background-color:#282b2e;">
            <div id="sidebar-wrapper" >
                <ul class="nav sidebar-nav">
                    <li class="sbi" >
                        <span class="sidebartext">@Html.ActionLink("Dashboard", "Index", "Profile")</span>
                    </li>
                    <li class="sbi">
                        <span class="sidebartext">@Html.ActionLink("Tutorials", "Index", "Tutorials")</span>
                    </li>
                    <li class="sbi">
                        <span class="sidebartext">@Html.ActionLink("Paths", "Index", "Paths")</span>
                    </li>
                    <li class="sbi">
                        <span class="sidebartext">@Html.ActionLink("Community", "Index", "Community")</span>
                    </li>
                    <li class="sbi">
                        <span class="sidebartext">@Html.ActionLink("Challenges", "Index", "Quiz")</span>
                    </li>
                </ul>
            </div>
        </div>

    <div class="" style="margin:0px 10px 0px 1em;padding-left:1em">
        @RenderBody()
        <br />
        <footer>
            <div class="row">
                <div class="col-md-9">
                    <div class="col-md-3">
                        <ul>
                            <li>@Html.ActionLink("Dashboard", "Index", "Profile")</li>
                            <li>@Html.ActionLink("Tutorials", "Index", "Tutorials")</li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <ul>
                            <li>@Html.ActionLink("Paths", "Index", "Paths")</li>
                            <li>@Html.ActionLink("Community", "Index", "Community")</li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <ul>
                            <li>@Html.ActionLink("Challenges", "Index", "Quiz")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="http://www.skulpt.org/static/skulpt.min.js" type="text/javascript"></script>
    <script src="http://www.skulpt.org/static/skulpt-stdlib.js" type="text/javascript"></script> 
</body>
</html>
