@model IEnumerable<Collaborate_lrn_Py.Models.Tutorial>

@{
    ViewBag.Title = "Tutorials";
}

<div class="row">
    <div>
        <h2>
            @ViewBag.Title. <small>Teach.</small>
        <span>
            @Html.ActionLink(" ", "Create", "Tutorial", new { @class = "btn btn-success glyphicon glyphicon-plus" })
        </span>
        <span align="right">
            @using (Ajax.BeginForm(
                    "Index",
                    "Tutorials",
                    new AjaxOptions
                    {
                        HttpMethod = "get",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "tutorials"
                    }))
            {
                @Html.TextBox("searchTerm")
                <input type="submit" class="btn btn-info" value="Search" />
            }
        </span>
    </h2>
</div>
</div>
<br/>


@Html.Partial("_Tutorials", Model)

@Scripts.Render("~/bundles/jquery")
