@model IEnumerable<Collaborate_lrn_Py.Models.Tutorial>

@{
    ViewBag.Title = "Tutorials on PyOrial";
}

<h2>@ViewBag.Title <small>Learn</small></h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<h4>@ViewBag.Message</h4>
<table class="table table-hover">
    <thead class="thead-inverse">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Difficulty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>Author</th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Difficulty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Educator.UserName)
        </td>
        <td>
            @Html.ActionLink("View", "TakeTutorial", new { id=item.ID }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
