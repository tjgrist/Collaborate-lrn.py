@model Collaborate_lrn_Py.Models.TutQuizViewModel

@{
    ViewBag.Title = Model.ModelTutorial.Title;
}
<link href="~/Content/TakeTutorial.css" rel="stylesheet" />

<link rel="stylesheet" href="~/Content/obsidian.css">
<script src="~/Scripts/highlight.pack.js"></script>
<script>hljs.initHighlightingOnLoad();</script>

<div class="container-fluid">
    <h2>@ViewBag.Title <small>Tutorial</small></h2> 
    <div class="row">
        <div class="col-md-8">
            <div class="jumbotron">
                <h5>@Html.DisplayNameFor(model => model.ModelTutorial.BodyText)</h5>
                <pre>@Html.DisplayFor(model => model.ModelTutorial.BodyText)</pre>
            </div>
        </div>
        <div class="col-md-4">
            <div class="jumbotron">
                <div>
                    <h5>@Html.DisplayNameFor(model => model.ModelTutorial.CodeSample)</h5>
                    <pre class="pycode"><code class="python">@Html.DisplayFor(model => model.ModelTutorial.CodeSample)</code></pre>
                </div>
            </div>
        </div>
    </div>

    @{
        if (Model.ModelQuiz != null)
        {
            @Html.Partial("~/Views/Quiz/_TakeQuiz.cshtml", Model.ModelQuiz)
        }
        else
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }
    }
</div>

