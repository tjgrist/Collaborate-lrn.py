@model IEnumerable<Collaborate_lrn_Py.Models.Quiz>
@{ 
    ViewBag.Title = "Available Code Challenges";
}
<h2>@ViewBag.Title</h2>

<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="">
                    <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                    <p><span style="font-weight:bold">@Html.DisplayNameFor(model => model.Tutorial.Title)</span> @Html.DisplayFor(modelItem => item.Tutorial.Title)</p>
                    <p><span style="font-weight:bold">Author:</span> @Html.DisplayFor(modelItem => item.Educator.UserName)</p>
                    <p>@Html.DisplayFor(modelItem => item.Goal)</p>
                    <span>@Html.ActionLink("Take it", "TakeTutorial", "Tutorials", new { id = item.TutorialId }, new { @class = "btn btn-primary" })</span>
                </div>
                <br /><br />
            </div>
        }
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
