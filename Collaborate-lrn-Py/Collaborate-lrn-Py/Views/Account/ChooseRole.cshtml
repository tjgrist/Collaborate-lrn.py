@model Collaborate_lrn_Py.Models.RegisterViewModel
@{
    ViewBag.Title = "Choose a Role";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChooseRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>As an Educator, you'll be able to create and collaborate on tutorials.</h4>
    <h4>As an Student, you'll be able to take tutorials, create custom paths, and vote on the best tutorials.</h4>
    <hr />
    <div class="form-group">
        @Html.Label("Choose a Role:", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, " ")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
