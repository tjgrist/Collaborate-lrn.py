@model Collaborate_lrn_Py.Models.CollaborativeTutorial

@{ 
    ViewBag.Title = "Collaborate";
}
<link rel="stylesheet" href="~/Content/TakeTutorial.css" />
<link rel="stylesheet" href="~/Content/obsidian.css">
<script src="~/Scripts/highlight.pack.js"></script>
<script>hljs.initHighlightingOnLoad();</script>

<div class="container-fluid">
    <h4>@Model.Tutorial.Title</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Tutorial.Educator.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tutorial.Educator.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tutorial.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tutorial.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tutorial.CreationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tutorial.CreationDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tutorial.Votes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tutorial.Votes)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tutorial.CodeSample)
        </dt>

        <dd>
            <pre class="pycode"><code class="python">@Html.DisplayFor(model => model.Tutorial.CodeSample)</code></pre>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tutorial.BodyText)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tutorial.BodyText)
        </dd>

    </dl>

    <div class="col-md-8">
        <div>
            @foreach (var c in Model.Comments)
            {
                <div class="comment">
                    <p>@Html.DisplayFor(x => c.UserName)</p>
                    <p>@Html.DisplayFor(x => c.TimeStamp)</p>
                    <div style="background-color:#282b2e"><pre style="background-color:#282b2e;color:aliceblue">@Html.DisplayFor(x => c.Text)</pre></div>
                    <p>@Html.ActionLink(" ", "DeleteComment", new { id = c.Id, ctId = Model.Id }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })</p>
                </div>
            }
        </div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.TutorialId)
                <div class="form-group">
                    @Html.LabelFor(model => model.newComment, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.newComment, new { htmlAttributes = new { @class = "form-control", @rows = 10 } })
                        @Html.ValidationMessageFor(model => model.newComment, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add Comment" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>

    <p>
        @Html.ActionLink("Preview", "TakeTutorial", "Tutorials", new { id = Model.TutorialId }, new { @class = "btn btn-warning" })
    </p>
</div>
